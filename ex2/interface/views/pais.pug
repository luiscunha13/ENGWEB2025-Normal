extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h2 País: #{pais}
    
    .w3-container
      h3.w3-margin-top Edições Organizadas
      if edicoesOrganizadas.length > 0
        table.w3-table-all.w3-hoverable
          thead
            tr.w3-blue
              th ID Edição
              th Ano
          tbody
            each edicao in edicoesOrganizadas
              tr
                td
                  a(href=`/${edicao.id}`)= edicao.id
                td= edicao.anoEdição
      else
        p Este país não organizou nenhuma edição.
      
      h3.w3-margin-top Participações
      if participacoes.length > 0
        table.w3-table-all.w3-hoverable
          thead
            tr.w3-blue
              th ID Edição
              th Ano
              th Música
              th Intérprete
              th Resultado
          tbody
            each participacao in participacoes
              tr
                td
                  a(href=`/${participacao.edicaoId}`)= participacao.edicaoId
                td= participacao.ano
                td= participacao.musica.título
                td= participacao.musica.intérprete
                td= participacao.vencedor ? 'Vencedor' : 'Participante'
      else
        p Este país não participou em nenhuma edição.
    
    footer.w3-container.w3-blue
      a.w3-button.w3-white.w3-margin-bottom(href="/") Voltar à Página Principal