extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h2 Edição #{edicao.anoEdição}
    .w3-container
      p
        strong ID: 
        | #{edicao.id}
      p
        strong Organizador: 
        a(href=`/paises/${edicao.organizacao}`)= edicao.organizacao
      p
        strong Vencedor: 
        a(href=`/paises/${edicao.vencedor}`)= edicao.vencedor
      
      h3.w3-margin-top Músicas Participantes
      table.w3-table-all.w3-hoverable
        thead
          tr.w3-blue
            th Título
            th Intérprete
            th País
        tbody
          each musica in edicao.musicas
            tr
              td= musica.título
              td= musica.intérprete
              td
                a(href=`/paises/${musica.país}`)= musica.país
    
    footer.w3-container.w3-blue
      a.w3-button.w3-white.w3-margin-bottom(href="/") Voltar à Página Principal